<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp">


        <TextView
            android:visibility="gone"
            android:id="@+id/machine_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:drawableLeft="@drawable/ic_machine"
            android:text="lorem ipsum"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_machine" />
        <TextView
            android:visibility="gone"
            android:id="@+id/_material_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:drawableLeft="@drawable/ic_construction_materials"
            android:text="lorem ipsum"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_construction_materials" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.4"
            android:padding="10dp"
            android:background="@drawable/border_round"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="10 Bags"
            android:textAlignment="center" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/site"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="0.7"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:text="Gurugram Sector 29"
            android:textAlignment="textStart" />
   <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="0.4"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Pending" />



    </LinearLayout>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:gravity="start"
        android:text="Date: 30-02-2019" />
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/return_item"
        android:background="#e8e8e8"/>

</LinearLayout>