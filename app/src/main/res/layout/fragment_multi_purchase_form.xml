<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.LocalPurchaseForm">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="@string/please_fill_details"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_grey"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/overheads"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:hint="Transportation"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textSize="16dp" />


                    <EditText
                        android:id="@+id/total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:hint="Total"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textSize="16dp" />

                    <Spinner
                        android:id="@+id/tax_paid"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:padding="5dp"
                        android:entries="@array/tax_paid"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <!--   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:weightSum="2"
                       android:orientation="horizontal">

                       <EditText
                           android:id="@+id/rate"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_margin="10dp"
                           android:layout_weight="1"
                           android:background="@drawable/border"
                           android:hint="Rate"
                           android:inputType="numberDecimal"
                           android:padding="5dp"
                           android:textSize="16dp" />

                       <EditText
                           android:id="@+id/tax"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_margin="10dp"
                           android:layout_weight="1"
                           android:background="@drawable/border"
                           android:hint="Tax"
                           android:inputType="numberDecimal"
                           android:padding="5dp"
                           android:textSize="16dp" />

                   </LinearLayout>
       -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/vendor_details"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/border"
                        android:hint="Vendor Name"
                        android:padding="5dp"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/vendor_gst"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:hint="Vendor GST"
                        android:inputType="text"
                        android:padding="5dp"
                        android:textSize="16dp" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ship_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:hint="Slip No."
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textSize="16dp" />

                    <EditText
                        android:id="@+id/details"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:hint="Details"
                        android:padding="5dp"
                        android:textSize="16dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="vertical"
                    android:id="@+id/bill">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.6"
                        android:text="Attach Images"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="0.01"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@color/color1" />

                    <buildnlive.com.buildhr.utils.AdvancedRecyclerView
                        android:id="@+id/images"
                        android:layout_weight="2.39"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="5dp"
                        android:scrollbars="horizontal" />
                </LinearLayout>

            </LinearLayout>



            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/top_bar"-->
            <!--android:orientation="horizontal">-->

            <!--<Button-->
            <!--android:id="@+id/upload_bill"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:text="Upload Bill Image" />-->
            <!--</RelativeLayout>-->

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminate="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/hider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/submit"
                android:alpha="0.6"
                android:background="#ffffff"
                android:visibility="gone" />

            <Button
                android:id="@+id/submit"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top_bar"
                android:background="@color/color3"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="20dp" />



        </RelativeLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>